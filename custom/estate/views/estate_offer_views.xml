<?xml version="1.0"?>
<odoo>
    <record id="estate_offer_model_form" model="ir.ui.view">
        <field name="name">estate.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
               <sheet>
                    <group>
                        <field name="price" string="price"></field>
                        <field name="partner_id" string="partner"></field>
                        <field name="status" string="Status"></field>
                        <field name="validity" string="Validity (days)"></field>
                        <field name="date_deadline" string="Deadline"></field>
                    </group>
               </sheet>
            </form>
        </field>
    </record>
</odoo>
